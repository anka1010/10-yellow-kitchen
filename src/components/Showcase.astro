---
import { Image } from "astro:assets";
import plate from"../assets/images/showcase/plate.png";
import rucola from"../assets/images/showcase/rucola.png";
import arrow from"../assets/images/showcase/arrow.svg";
---
<section class="showcase">
    <div class="left-column">
        <h1 class="accent">Your Food court at home</h1>
        <div class="buttons">

            <a href="#!" class="btn-text">Delivery<br /><span class="p-small">Order in</span></a>
            <a href="#!" class="btn-text">Take out<br /><span class="p-small">Grab and go</span></a>
        </div>
    </div>
    <div class="right-column">
        <Image src={plate} alt="Plate with food" />
        <Image src={rucola} alt="Rucola" class="img-secondary" />
        <div class="arrow-block">
            <Image src={arrow} alt="Arrow" />
            <p class="p">Fresh salad, Il Pasifigio</p>
        </div>
    </div>
</section>

<style>
    .showcase {
        max-width: 125.6rem;
        margin: 0 auto;
        margin-top: 2.5rem;

        display: flex;
        justify-content: space-between;

        .left-column {
            max-width: 53.6rem;
            margin-top: 9.5rem;

            .buttons {
                margin-top: 8.8rem;

                display: flex;
                gap: 2.4rem;

                a {
                    text-align: center;
                    color: inherit;
                    padding: 1.85rem 2.4rem;
                    border-radius: 4px;
                    border: 2px solid var(--color-primary);
                }
            }
        }
        
        .right-column {
            max-width: 64.8rem;
            position: relative;
            
            .img-secondary {
                width: min(19.7rem, 40%);
                position: absolute;
                bottom: 9.26%;
                left: -28.06%;
            }

            .arrow-block {
                max-width: fit-content;

                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1.43rem;

                position: absolute;
                right: 0;
                bottom: -5.7rem;

                img {
                    width: 31px;
                    height: 63px;
                }
            }
        }
    }
</style>